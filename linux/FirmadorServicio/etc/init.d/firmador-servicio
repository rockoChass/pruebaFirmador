#!/bin/sh
### BEGIN INIT INFO
# Provides:          ...
# Required-Start:    $syslog
# Required-Stop:     $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: servicio firmador estatal
# Description:
#
### END INIT INFO
SERVICE_NAME=firmador-servicio
case $1 in
    start)
        echo "Iniciando $SERVICE_NAME ..."
        sudo sh /usr/bin/FirmadorServicio/myapp-start.sh
        echo "$SERVICE_NAME Iniciado ..."
    ;;
    stop)
        echo "$SERVICE_NAME Deteniendo ..."
        sudo /usr/bin/FirmadorServicio/myapp-stop.sh
        echo "$SERVICE_NAME Detenido ..."
    ;;
    restart)
        echo "$SERVICE_NAME Deteniendo ..."
        sudo /usr/bin/FirmadorServicio/myapp-stop.sh
        echo "$SERVICE_NAME Detenido ..."
        echo "Iniciando $SERVICE_NAME ..."
        sudo /usr/bin/FirmadorServicio/myapp-start.sh
        echo "$SERVICE_NAME Iniciado ..."
    ;;
    status)
       sudo /usr/bin/FirmadorServicio/myapp-status.sh
    ;;
esac
